@define-mixin hover-border-left {
	position: relative;

	&:before {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 1px;
		background-color: currentColor;
	}

	&:hover:before {
		width: 100%;
	}
}